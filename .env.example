# Apify API token (for HarvestAPI LinkedIn job scraper)
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_your_token_here

# OpenAI API key (for job scoring and semantic dedup)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Resend API key (for daily email digest)
RESEND_API_KEY=re_your_resend_api_key_here

# Email sender address (must be verified in Resend)
EMAIL_FROM=jobs@yourdomain.com

# Dashboard basic auth credentials
DASHBOARD_USER=admin
DASHBOARD_PASS=changeme_use_a_strong_password

# Web server port
PORT=3000

# Path to the SQLite database file
DATABASE_PATH=./data/jobs.db
